<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jin.CommBoard.ICommBoardDao">
<select id="select" resultType="com.jin.CommBoard.CommBoard">
		SELECT *
		from commboard
</select>

<insert id="Insert" parameterType="com.jin.CommBoard.CommBoard">
	<selectKey keyProperty="no" resultType="int" order="BEFORE">
			SELECT
			nvl(max(no), 0)+1 FROM commboard
		</selectKey>
	insert into commboard(no,id, title, contents, writedate)
	values(#{no} ,#{id}, #{title}, #{contents}, #{writedate})
</insert>

<select id="boardCount" resultType="int">
	select count(*)
	from commboard
</select>
</mapper>